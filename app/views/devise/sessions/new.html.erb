<div class="bg-gray-100 min-h-screen pt-[60px]">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "block pl-3 text-lg w-full border-1 border-gray-100", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: "block pl-3 text-lg w-full border-1 border-gray-100", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex w-full justify-center gap-2 items-center mt-3 mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <nav class="bg-[#3778c2] text-white flex items-center justify-between py-2 px-2 fixed top-0 left-0 w-full">
    <a href="/" class="text-2xl inline-block">&larr;</a>
    <h2 class="text-center">LOGIN</h2>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  </nav>
<% end %>

<%= render "devise/shared/links" %>

</div>
